<alfresco-config>
	<config evaluator="string-compare" condition="DocLibCustom">
	   <dependencies>
	      <js src="/googledocs/components/documentlibrary/actions-min.js" />
	   </dependencies>
	</config>
	
	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="google-docs-edit-action-link" type="javascript" icon="googledocs" label="googledocs.actions.edit">
				<param name="function">onGoogledocsActionEdit</param>
				<evaluator>evaluator.doclib.google.docs.edit</evaluator>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
			</action>
		</actions>
		
		<actionGroups>
			<actionGroup id="document-browse">
				<action index="250" id="google-docs-edit-action-link" />
			</actionGroup>
			
			<actionGroup id="document-details">
				<action index="250" id="google-docs-edit-action-link" />
			</actionGroup>
		</actionGroups>	
	</config>
	
<config evaluator="string-compare" condition="DocumentLibrary" replace="true">
      <create-content>

         <content id="google-docs" label="create-content.googledocs.document" icon="document-file" index="50" type="javascript">
            <param name="function">onGoogledocsActionCreateDocument</param>
         </content>
         <content id="google-docs" label="create-content.googledocs.spreadsheet" icon="spreadsheet-file" index="51" type="javascript">
            <param name="function">onGoogledocsActionCreateSpreadsheet</param>
         </content>
         <content id="google-docs" label="create-content.googledocs.presentation" icon="presentation-file" index="52" type="javascript">
            <param name="function">onGoogledocsActionCreatePresentation</param>
         </content>

      </create-content>
</config>
	
</alfresco-config>
